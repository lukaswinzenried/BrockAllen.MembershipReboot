@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@if (RenderContext.Context.CurrentUser != null)
{
    <p>
        You are already logged in as @RenderContext.Context.CurrentUser.UserName but you
        tried to access a resource that you do not have permission
        for. Please login with an account that does have access
        or contact your administrator to grant you access.
    </p>
}

<form action="~/Login" method="post">
    <fieldset>
        <legend>@ViewBag.Title</legend>
        <p>
            <label for="username">Username</label>
            <input name="username">
        </p>
        <p>
            <label for="password">Password</label>
            <input name="password" type="password">
        </p>
        <div class="buttons">
            <button>Login</button>
        </div>

    </fieldset>
</form>

<p>
    Or to use a client certificate to login click
    <a href="~/Login/Certificate">here</a>
</p>
